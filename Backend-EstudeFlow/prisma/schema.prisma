
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int   @id @default(autoincrement())
  nome      String
  email     String  @unique
  senha     String
  unidade   Unidade[]
  tarefas   Tarefa[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Unidade {
  id        Int   @id @default(autoincrement())
  nome      String
  usuarioId    Int
  usuario   Usuario?    @relation(fields: [usuarioId], references: [id])
  tarefas   Tarefa[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tarefa {
  id            Int  @id @default(autoincrement())
  nome          String
  status        String @default("Pendente") //"pendente", "conclu√≠da", "atrasada"
  dataEntrega   DateTime 
  unidade        Unidade? @relation(fields: [unidadeId], references: [id])
  usuario       Usuario @relation(fields: [usuarioId], references: [id])
  unidadeId      Int
  usuarioId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


}